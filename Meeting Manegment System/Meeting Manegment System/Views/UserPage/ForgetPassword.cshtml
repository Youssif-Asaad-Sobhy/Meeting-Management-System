<script>
    function validatePasswordChangeForm() {
        var curPasswordInput = document.getElementById("curpassword");
        var newPasswordInput = document.getElementById("newpassword");
        var confirmPasswordInput = document.getElementById("confirmpassword");

        // Validate current password
        var curPassword = curPasswordInput.value;
        if (!curPassword || curPassword.trim() === "") {
            alert("يرجى إدخال كلمة المرور الحالية.");
            return false;
        }

        // Validate new password
        var newPassword = newPasswordInput.value;
        if (!newPassword || newPassword.trim() === "") {
            alert("يرجى إدخال كلمة المرور الجديدة.");
            return false;
        }

        // Validate password length
        if (newPassword.length < 8) {
            alert("يجب أن تحتوي كلمة المرور الجديدة على الأقل على 8 أحرف.");
            return false;
        }

        // Validate confirm password
        var confirmPassword = confirmPasswordInput.value;
        if (newPassword !== confirmPassword) {
            alert("كلمة المرور الجديدة وتأكيد كلمة المرور غير متطابقين.");
            return false;
        }

        return true; // Submit the form
    }
</script>